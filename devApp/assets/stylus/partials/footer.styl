footer.footer
  background-color #252525
  padding-bottom 40px
  
  > .global-wrap
    border-top 1px solid #515151
    padding-top 30px
    
  .footer-item
    column(1/5, gutter: 1)
    
    +below(850px)
      column(1/3, gutter: 1)
    
    +below(725px)
      column(1, gutter: 0)
      margin-bottom 40px
    
    h3
      font-weight 300
      font-size 22px
      margin-bottom 22px
      
    ul
      li
        font-size 14px
        line-height 1.7

      a
        text-decoration none
        color white
      
      &.address-list
        li:first-child
          margin-bottom 20px
                    
      &.more-info-list
        li
          margin 14px 0
          
          i
            margin-right 3px
    
  .social-icons
    float right
    li
      float left
      a
        text-decoration none
        color black
        font-size 44px
        margin-right 10px
        &:hover
          color #515151
          transition all .2s