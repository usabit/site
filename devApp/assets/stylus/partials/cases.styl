.iphone-wrap
  position relative
  margin-right 20px

  +below(910px)
    display none
  
  .iphone-screen
    position absolute
    top 0
    z-index 0
  
  .iphone-mockup
    z-index 1

section.cases-content
  background-image linear-gradient(#fff, #ddd 750px)
  margin-bottom 50px
  > .header
    padding 0px 0 60px 0
    .iphone-wrap
      position relative
      text-align center
      margin 0 auto
      height 644px
      width 660px

      img
        position absolute
        top 0
        left 0
        z-index 1
        
        &.screen
          z-index 2
          margin-top 82px
          &.reflection
            z-index 3
            
  .cases-list
    > .cases-list-item
      height 350px
      max-width 1000px
      width 90%
      margin 0 auto
      background-color white
      color #333333
      margin-bottom 50px
      &:last-child
        margin-bottom 0
      
      display flex
      
      &.simple
        font-size 32px
        line-height 1.2
        margin 135px auto
        padding-right 17%
        color #5d5d5d
        background-color transparent
        height initial
        +below(800px)
          font-size 28px
          margin 85px auto
        
        &.center
          width 80%
          max-width 600px
          font-size 38px
          font-weight 700 !important
          text-align center !important
          color #223d6a
          padding-left 0 !important
          padding-right 0 !important
          margin-bottom 30px
          +below(800px)
            font-size 30px
      
      &:nth-of-type(even)
        &.simple
          display block
          text-align right
          padding-left 17%
          padding-right 0
        .item-brief
          order -1
          
      +below(800px)
        flex-direction row
      
      .featured-wrap
        width 57%
        height 100%
        background-size cover
        background-position 50% 50%
      
      .item-brief
        width 43%
        display flex
        flex-direction column
        justify-content space-between
        align-items flex-start
        padding 40px
        text-align left
                
        .brief-tag
          padding 8px 9px 7px
          font-size 11px
          background-color #ccc
          color white
          text-transform uppercase
          
          &.green
            background-color #22a119
          &.blue
            background-color #1474eb
          &.orange
            background-color #ef9912
            
        h4
          font-size 26px
          font-weight 800
          text-transform uppercase
        
        p
          font-size 18px
          line-height 1.4
          
        .app-link
          font-size 30px
          margin 0 15px 15px 0
          > li
            float left
            margin-right 15px
          a
            color #333
            opacity .3
            cursor pointer
            &:hover 
              opacity .7
              transition all .2s
            .margin-top
              margin-top 4px
          
    li.cases-list-item
      +below(800px)
        flex-direction column
        height initial
        
        .featured-wrap, .item-brief
          width 100%
          order 1 !important
          overflow hidden
          height initial
          
        .featured-wrap
          height 200px !important
          
        .item-brief
          display block
          .brief-tag
            display inline-block
            margin-bottom 15px
          h4
            margin 15px 0
          p
            margin 15px 0
